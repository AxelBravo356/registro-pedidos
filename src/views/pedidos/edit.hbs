<div
  class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg"
>
  <h1 class="text-center font-bold text-3xl">Editar pedido</h1>
  {{#each pedidos}}
    <form method="POST" class="mt-4">
      <input
        type="text"
        class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
        placeholder="A nombre de "
        name="title"
        value="{{title}}"
      />
      <input
        type="text"
        class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
        placeholder="Precio"
        name="monto"
        value="{{monto}}"
      />

      <textarea
        class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white"
        placeholder="DescripciÃ³n"
        name="descripcion"
      >
        {{descripcion}}
      </textarea>

      <button
        type="submit"
        class="rounded-md bg-red-500 w-full text-lg text-whtie font-semibold p-2 my-3 hover:bg-red-600 focus:bg-red-700"
      >Guardar</button>
    </form>
  {{/each}}
</div>