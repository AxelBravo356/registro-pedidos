<div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg mt-12">

    <table class="table-fixed w-full">
      <thead>
        <tr class="bg-red-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-1/4 py-4 ...">Cliente</th>
          <th class="w-1/4 py-4 ...">Monto a pagar</th>
          <th class="w-1/4 py-4 ...">Descripci√≥n</th>
          <th class="w-28 py-4 ...">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each pedidos}}
          <tr>
            <td class="py-3 px-10">{{id}}</td>
            <td class="p-5 px-20">{{title}}</td>
            <td class="p-5 px-20">${{monto}}</td>
            <td class="p-5 px-20 text-center">{{descripcion}}</td>
            <td class="p-5 flex justify-between">
              <form action="/pedidos/delete" method="POST" class="mx-2">
                <input type="hidden" value="{{id}}" name="id" />
                <button
                  class="bg-red-500 text-white px-3 py-1 rounded-sm"
                  type="submit"
                >
                  <i class="fas fa-trash"></i></button>
              </form>
              <a
                href="/pedidos/edit/{{id}}"
                class="bg-green-500 text-white px-3 py-1 rounded-sm"
              >
                <i class="fas fa-pen"></i></a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>